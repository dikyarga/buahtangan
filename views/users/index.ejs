<% include ../partials/header %>
<body>

    <!-- Following Menu -->

    <!-- Page Contents -->
    <div class="pusher">

        <div class="ui vertical stripe segment">
            <div class="ui middle aligned stackable grid container">
                <div class="row">
                    <div class="two wide column">
                        <h3 class="ui header">All Users </h3>

                    </div>
                    <div class="four wide column right">
                        <a href="/items/new" class="ui basic button">
                          <i class="icon user"></i>
                          Add User
                        </a>
                    </div>
                  </div>
                  <div class="row">
                    <table class="ui celled table" id="example">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>user name</th>
                                <th>email</th>
                                <th>role</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>

                            <% users.forEach(function(user){  %>
                                <tr>
                                    <td>
                                        <%= user.id %>
                                    </td>
                                    <td>
                                        <%= user.username %>
                                    </td>
                                    <td>
                                    <%= user.email%>>

                                    </td>
                                    <td>
                                      <%= user.role %>
                                    </td>

                                    <td>
                                        <div class="ui icon buttons">
                                            <a href="/users/<%= user.id %>" class="ui button"><i class="unhide icon"></i></a>
                                            <a href="/users/edit/<%= user.id %>/" class="ui button"><i class="edit icon"></i></a>
                                            <a href="/users/delete/<%= user.id %>/" onclick="return confirm('Are you sure you want to delete this item?');" class="ui button"><i class="trash icon"></i></a>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>

                    </table>
                </div>
            </div>
        </div>

    </div>
    <% include ../partials/footer %>

</body>

</html>
