<% include ../partials/header %>
<body>

    <!-- Following Menu -->

    <!-- Page Contents -->
    <div class="pusher">

        <div class="ui vertical stripe segment">
            <div class="ui middle aligned stackable grid container">
                <div class="row">
                    <div class="two wide column">
                        <h3 class="ui header">All Links </h3>

                    </div>
                    <div class="four wide column right">
                        <a href="/urls/new" class="ui basic button">
                          <i class="icon user"></i>
                          Add Link
                        </a>
                    </div>
                  </div>
                  <div class="row">
                    <table class="ui celled table" id="example">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Original URL</th>
                                <th>Shorted</th>
                                <th>Click Count</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>

                            <% links.forEach(function(link){  %>
                                <tr>
                                    <td>
                                        <%= link.id %>
                                    </td>
                                    <td>
                                        <a href="<%= link.url %>"><%= link.url %></a>
                                    </td>
                                    <td>
                                      <a href="/link/<%= link.shorted%>"><%= link.shorted%></a>
                                        <!-- <%= helper.beautifyUrl(link.shorted) %> -->
                                    </td>
                                    <td>
                                      <%= link.click %>
                                    </td>

                                    <td>
                                        <div class="ui icon buttons">
                                            <a href="/urls/<%= link.id %>" class="ui button"><i class="unhide icon"></i></a>
                                            <a href="/urls/<%= link.id %>/edit" class="ui button"><i class="edit icon"></i></a>
                                            <a href="/urls/<%= link.id %>/delete" onclick="return confirm('Are you sure you want to delete this item?');" class="ui button"><i class="trash icon"></i></a>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>

                    </table>
                </div>
            </div>
        </div>

    </div>
    <% include ../partials/footer %>

</body>

</html>
